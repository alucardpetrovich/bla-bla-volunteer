{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "src/constant": ["/src/constant/"],
      "src/hooks": ["/src/hooks/"],
      "src/helper": ["/src/helper/"],
      "src/locales": ["/src/locales/*"],
      "src/redux": ["/src/redux/*"],
      "src/components": ["/src/components/"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "yarn.lock",
    "./build/*",
    "build",
    "./build/**/*",
    ".vscode"
  ]
}
