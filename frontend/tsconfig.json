{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "react-jsx",
    "baseUrl": "./src/",
    "paths": {
      "constant": ["constant/"],
      "hooks": ["hooks/"],
      "helper": ["helper/"],
      "locales": ["locales/*"],
      "redux": ["redux/*"],
      "components": ["components/"],
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules", "dist", "yarn.lock", "./build/*", "build", "./build/**/*", ".vscode"]
}
